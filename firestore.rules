
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default to denying all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own profile data.
    // This also allows server-side functions authenticated as the user
    // to read their credentials.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;

      // Allow users to manage their own notes.
      match /notes/{noteId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
